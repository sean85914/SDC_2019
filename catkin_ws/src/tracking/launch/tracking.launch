<?xml version="1.0"?>
<launch>
  <arg name="size" default="0.1" doc="leaf size for voxel grid"/>

  <node pkg="tracking" type="tracking_node" name="tracking_node" output="screen" clear_params="true" required="true">
    <param name="leaf_size" value="$(arg size)"/>
  </node>
  <node pkg="rosbag" type="play" name="play" args="$(find tracking)/bag/tracking_1.bag -l --clock" output="screen"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find tracking)/config/rviz.rviz"/>
</launch>
